# BOB Studio 邮件服务配置示例
# 复制此文件为 .env 并填入您的实际配置

# 邮件服务提供商 (gmail, outlook, qq, netease163, custom)
REACT_APP_EMAIL_PROVIDER=gmail

# 邮件账户信息
REACT_APP_EMAIL_USER=your-email@gmail.com
REACT_APP_EMAIL_PASS=your-app-password
REACT_APP_EMAIL_FROM_NAME=BOB Studio
REACT_APP_EMAIL_FROM=your-email@gmail.com

# 自定义SMTP配置 (当 EMAIL_PROVIDER=custom 时使用)
REACT_APP_SMTP_HOST=smtp.example.com
REACT_APP_SMTP_PORT=587
REACT_APP_SMTP_SECURE=false
REACT_APP_SMTP_TLS_REJECT=false

# 邮件发送选项
REACT_APP_EMAIL_ENABLED=true
REACT_APP_EMAIL_RETRY_ATTEMPTS=3
REACT_APP_EMAIL_RETRY_DELAY=1000
REACT_APP_EMAIL_RATE_LIMIT=100

# 应用环境（生产环境）
NODE_ENV=production

# API 服务器地址（生产环境推荐留空使用同域相对路径）
# 如需显式指定域名，请启用 VITE_API_URL（前端构建读取）
# VITE_API_URL=https://studio.example.com

# 服务器配置
PORT=3005
SESSION_SECRET=change-me-to-random-secret
API_KEY_ENCRYPTION_SECRET=change-me-to-random-secret

# HTTPS配置 (生产环境使用HTTPS时设置为true)
USE_HTTPS=false

# ===== AI 模型配置（必填）=====
# Gemini API 基础 URL
GEMINI_API_BASE_URL=https://generativelanguage.googleapis.com/v1beta/models

# 文本模型（提示词优化）- gemini-2.5-flash 性价比最高
GEMINI_TEXT_MODEL=gemini-2.5-flash

# 图像生成模型 - gemini-2.5-flash-image 推荐
GEMINI_IMAGE_MODEL=gemini-2.5-flash-image

# 文本模型生成参数（可选，有默认值）
GEMINI_TEXT_TEMPERATURE=0.7
# 文本输出最大 token 数（32K 支持长提示词优化，Gemini 2.5/3 支持 65K）
GEMINI_TEXT_MAX_TOKENS=32768
